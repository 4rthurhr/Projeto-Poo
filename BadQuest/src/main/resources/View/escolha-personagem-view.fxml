<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller.EscolherPersonagemController">

    <VBox alignment="CENTER" spacing="30" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- TÃ­tulo -->
        <Label style="-fx-text-fill: white;                       -fx-font-size: 28px;                       -fx-font-weight: bold;" text="Selecione seu Personagem" />


        <HBox alignment="CENTER" spacing="40">


            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="guerreiroImg" fitHeight="128" fitWidth="128" preserveRatio="true" smooth="false" />


                <Button onAction="#escolherGuerreiro" style="-fx-font-size: 14px;" text="Guerreiro" />
            </VBox>

            <VBox>
                <ImageView fx:id="magoImg" fitHeight="128" fitWidth="128" preserveRatio="true" smooth="false" />

                <Button onAction="#escolherMago" alignment="CENTER" style="-fx-font-size: 14px;" text="Mago" />
                
            </VBox>


        </HBox>


        <Button fx:id="btCon" onAction="#confirmarEscolha" style="-fx-font-size: 16px;  -fx-padding: 10 30;" text="Confirmar" />

    </VBox>

</AnchorPane>
